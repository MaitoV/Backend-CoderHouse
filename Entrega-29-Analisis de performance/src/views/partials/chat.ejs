    <div class="col-5 px-0">
      <div class="bg-white">

        <div class="bg-gray px-4 py-2 bg-light">
          <p class="h5 mb-0 py-1">Usuarios conectados</p>
        </div>

        <div class="messages-box">
          <div class="list-group rounded-0" id="usersList">
             <!--Aca van a ir el listado todos los usuarios nuevos que se van agregando-->
          </div>
        </div>
      </div>
    </div>
    <!-- Chat Box-->
    <div class="col-7 px-0">
      <div class="px-4 py-5 chat-box bg-white" id="messagesWrapper">
